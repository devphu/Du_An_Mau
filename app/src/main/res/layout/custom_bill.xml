<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Nhà Sách Phương Nam"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtTitleDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Ngày bán"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/txtTitleDate"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtTitleNameBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitleDate"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Ten Sach"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/txtNameBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDate"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/txtTitleNameBook"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtTitlePriceBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitleNameBook"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Giá sách"
            android:textSize="18sp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/txtPriceBook"
            android:textSize="18sp"
            android:layout_below="@+id/txtNameBook"
            android:layout_toRightOf="@+id/txtTitlePriceBook"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtTitleAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitlePriceBook"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Số Lượng"
            android:textSize="18sp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/txtAmount"
            android:textSize="18sp"
            android:layout_below="@+id/txtPriceBook"
            android:layout_toRightOf="@+id/txtTitleAmount"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtTitleTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitleAmount"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Tổng Tiền"
            android:textSize="18sp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/txtTotal"
            android:textSize="18sp"
            android:layout_below="@+id/txtAmount"
            android:layout_toRightOf="@+id/txtTitleAmount"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>